{% macro miTabs(selected, html) %}
  <div class="govuk-tabs">
    <h2 class="govuk-tabs__title">
      Contents
    </h2>
    <ul class="govuk-tabs__list">
      <li class="govuk-tabs__list-item {{ 'govuk-tabs__list-item--selected' if selected === 'user-tasks' else '' }}">
        <a class="govuk-tabs__tab" id="user-tasks-tab-link" href="/awacs/manage/summary/user-tasks">
          User updated tasks
        </a>
      </li>
      <li
        class="govuk-tabs__list-item {{ 'govuk-tabs__list-item--selected' if selected === 'automatic-tasks' else '' }}">
        <a class="govuk-tabs__tab" id="automatic-tasks-tab-link" href="/awacs/manage/summary/automatic-tasks">
          Automatically updated tasks
        </a>
      </li>
      <li
        class="govuk-tabs__list-item {{ 'govuk-tabs__list-item--selected' if selected === 'total-tasks' else '' }}">
        <a class="govuk-tabs__tab" id="total-tasks-tab-link" href="/awacs/manage/summary/total-tasks">
          Total updated tasks
        </a>
      </li>
    </ul>
    <div class="govuk-tabs__panel" id={{ selected + "-panel"}}>
      {{ html | safe }}
    </div>
  </div>

{% endmacro %}
